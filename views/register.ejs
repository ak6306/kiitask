<%- include ("./partials/header") %>
<body>
<h4 class="display-4 container" style="text-align: center; padding-top: 3%;"> Register</h4>
<div class="container shadow-sm p-3 mb-5 bg-white rounded" style="width: 25rem">
<form action="/register" method="POST">
    <div class="form-group">
        <label for="username">Username</label>
        <input name="username" type="text" class="form-control" id="username" aria-describedby="username">
        <% var err; if(err){  %> 
        <small id="emailHelp" class="form-text" style="color: red;"><%= err.message %> </small>
        <% } %> 
      </div>
    <div class="form-group">
      <label for="Email">Email address</label>
      <input type="email" name="email" class="form-control" id="Email" aria-describedby="emailHelp">
      <small id="emailHelp" class="form-text text-muted">Please use your KIIT Email address only. This is just for verification.</small>
    </div>
    <div class="form-group">
      <label for="InputPassword1">Password</label>
      <input name ="password" type="password" class="form-control" id="InputPassword1">
    </div>
    <div class="form-group">
        <label for="SchoolSelect">Your School</label>
        <select name="school" class="form-control" id="SchoolSelect">
          <option>School of Computer Engineering</option>
          <option>School of Electronics Engineering</option>
          <option>School of Mechanical Engineering</option>
          <option>School of Civil Engineering</option>
          <option>School of Computer Application</option>
          <option>School of Electrical Engineering</option>
          <option>School of Architecture and Planning</option>
          <option>School of Chemical Technology</option>
          <option>School of Biotechnology</option>
          <option>School of Applied Sciences</option>
          <option>School of Law</option>
          <option>School of Leadership</option>
          <option>School of Management</option>
          <option>School of Rural Management</option>
          <option>School of Commerce and Economics</option>
          <option>School of Film & Media Sciences</option>
          <option>School of Fashion Technology</option>
          <option>School of Mass Communication</option>
          <option>School of Humanities</option>
          <option>School of Language</option>

        </select>
        </div>
        <div class="form-group">
            <label for="YearSelect">You are in</label>
            <select name="year" class="form-control" id="YearSelect">
              <option>1st year</option>
              <option>2nd year</option>
              <option>3rd Year</option>
              <option>4th Year</option>
            </select>
            </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  </div>
  <%- include ("./partials/footer") %> 
</body>
